<div class="container"> 
<div class="row"> 
<div class="col-xs-3" >
<h1>User info</h1>
<table class='table'>
<tr><%= attachment_image_tag @user, :profile_image ,fallback: "no_image.jpg"%><tr>
<tr>
<th>name</th>
<th><%= @user.name %></th>
</tr>
<tr>
<th>introduction</th>
<th><%= @user.introduction %></th>
</tr>
<th>
<% if @user.id == current_user.id %> <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
<% end %>
</th>
</table>


<h1>New book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<br> <button class="btn btn-primary">Create Book</button></br>
<% end %>
</div>

<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to user_path(@user.id) do %>
<%= attachment_image_tag @user, :profile_image ,fallback: "no_image.jpg"%>
<% end %>	
</td>
<td>
<%= link_to book.title , book_path(book.id) %>
</td>
<td>
<%= book.body%>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>