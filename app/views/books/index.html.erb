<div class="container"> 
<div class="row"> 
<div class="col-xs-3" >
<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image ,fallback: "no_image.jpg"%>
<h4>name</h4>
<%= @user.name %>
<h4>introduction</h4>
<%= @user.introduction %>


<h1>New book</h1>
<% if @book.errors.any? %>
<h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
<ul><% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<br> <button class="btn btn-primary">Create Book</button></br>
<% end %>
</div>


<div class="col-xs-9" >
<h1>Books</h1>
<table class="table">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to user_path(book.user) do %>
<%= attachment_image_tag @user, :profile_image ,fallback: "no_image.jpg"%>
<% end %>
</td>
<td>
<%= link_to book.title , book_path(book.id) %>
</td>
<td>
<%= book.body%>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>

